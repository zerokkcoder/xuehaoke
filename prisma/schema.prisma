generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id             Int       @id @default(autoincrement())
  username       String    @unique
  passwordHash   String    @map("password_hash")
  role           String    @default("admin")
  status         String    @default("active")
  lastLoginAt    DateTime? @map("last_login_at")
  failedAttempts Int       @default(0) @map("failed_attempts")
  createdAt      DateTime  @default(now()) @map("created_at")

  @@map("admin_users")
}

model Category {
  id            Int           @id @default(autoincrement())
  name          String        @unique
  sort          Int           @default(0)
  createdAt     DateTime      @default(now()) @map("created_at")
  subcategories Subcategory[]
  resources     Resource[]

  @@map("categories")
}

model Subcategory {
  id         Int      @id @default(autoincrement())
  categoryId Int      @map("category_id")
  name       String
  sort       Int      @default(0)
  createdAt  DateTime @default(now()) @map("created_at")
  category   Category @relation(fields: [categoryId], references: [id])
  resources  Resource[]

  @@map("subcategories")
}

model Resource {
  id             Int            @id @default(autoincrement())
  cover          String?
  title          String
  content        String         @db.Text
  price          Decimal        @default(0) @db.Decimal(10, 2)
  downloadCount  Int            @default(0)
  viewCount      Int            @default(0)
  hotScore       Int            @default(0)
  categoryId     Int
  subcategoryId  Int?
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  category       Category       @relation(fields: [categoryId], references: [id])
  subcategory    Subcategory?   @relation(fields: [subcategoryId], references: [id])
  tags           ResourceTag[]
  downloads      ResourceDownload[]
  accesses       UserResourceAccess[]

  @@map("resources")
}

model UserResourceAccess {
  userId     Int
  resourceId Int
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id])
  resource   Resource @relation(fields: [resourceId], references: [id])

  @@id([userId, resourceId])
  @@map("user_resource_accesses")
}

model Tag {
  id        Int           @id @default(autoincrement())
  name      String        @unique
  createdAt DateTime      @default(now())
  resources ResourceTag[]

  @@map("tags")
}

model ResourceTag {
  resourceId Int
  tagId      Int
  resource   Resource @relation(fields: [resourceId], references: [id])
  tag        Tag      @relation(fields: [tagId], references: [id])

  @@id([resourceId, tagId])
  @@map("resource_tags")
}

model ResourceDownload {
  id         Int      @id @default(autoincrement())
  resourceId Int
  url        String
  code       String?
  createdAt  DateTime @default(now())
  resource   Resource @relation(fields: [resourceId], references: [id])

  @@map("resource_downloads")
}

// Frontend site user model (for login/register)
model User {
  id            Int      @id @default(autoincrement())
  username      String   @unique
  email         String   @unique
  passwordHash  String   @map("password_hash")
  emailVerified Boolean  @default(false) @map("email_verified")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")
  avatarUrl     String?  @map("avatar_url")

  // VIP membership
  isVip         Boolean   @default(false) @map("is_vip")
  vipPlanId     Int?      @map("vip_plan_id")
  vipExpireAt   DateTime? @map("vip_expire_at")
  vipPlan       MembershipPlan? @relation(fields: [vipPlanId], references: [id])

  orders        Order[]
  resourceAccesses UserResourceAccess[]

  @@map("users")
}

// Email verification codes for registration
model EmailVerification {
  id         Int      @id @default(autoincrement())
  email      String
  code       String
  expiresAt  DateTime @map("expires_at")
  used       Boolean  @default(false)
  createdAt  DateTime @default(now()) @map("created_at")
  @@map("email_verifications")
}

// Membership/VIP plans
model MembershipPlan {
  id             Int       @id @default(autoincrement())
  name           String    @unique
  price          Decimal   @default(0) @db.Decimal(10, 2)
  durationDays   Int       @map("duration_days")
  dailyDownloads Int       @map("daily_downloads")
  isPopular      Boolean   @default(false) @map("is_popular")
  features       Json?
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  users          User[]

  @@map("membership_plans")
}

// Orders for payments (course/member)
model Order {
  id          Int      @id @default(autoincrement())
  userId      Int?
  outTradeNo  String   @unique @map("out_trade_no")
  tradeNo     String?  @map("trade_no")
  orderType   String   @map("order_type") // 'member' | 'course'
  productId   Int      @map("product_id")
  productName String   @map("product_name")
  amount      Decimal  @db.Decimal(10, 2)
  status      String   // 'pending' | 'success' | 'closed' | 'failed'
  payChannel  String   @default("alipay") @map("pay_channel")
  notifyRaw   Json?    @map("notify_raw")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  paidAt      DateTime? @map("paid_at")

  user        User?    @relation(fields: [userId], references: [id])

  @@map("orders")
}

// Site settings for configurable values (e.g., Alipay keys, notify URL)
model SiteSetting {
  id               Int      @id @default(autoincrement())
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @updatedAt @map("updated_at")

  // Alipay configurations
  alipayAppId      String?  @map("alipay_app_id")
  alipayPrivateKey String?  @db.Text @map("alipay_private_key")
  alipayPublicKey  String?  @db.Text @map("alipay_public_key")
  alipayGateway    String?  @map("alipay_gateway")
  alipayNotifyUrl  String?  @map("alipay_notify_url")

  // Site display configurations
  siteName        String?  @map("site_name")
  siteLogo        String?  @map("site_logo")
  siteSlogan      String?  @map("site_slogan")
  siteKeywords    String?  @db.Text @map("site_keywords")
  siteDescription String?  @db.Text @map("site_description")
  heroImage       String?  @map("hero_image")
  footerText      String?  @db.Text @map("footer_text")
  siteSubtitle    String?  @map("site_subtitle")

  @@map("site_settings")
}

model Favorite {
  id        Int      @id @default(autoincrement())
  title     String
  url       String   @db.Text
  enabled   Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("favorites")
}